<div class="form-wrapper">
  <%= simple_form_for @listing do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="mb-3">
      <%= f.input :title %>
    </div>
    <div class="mb-3">
      <%= f.input :category %>
    </div>
    <div class="mb-3">
      <%= f.input :price %>
    </div>
    <div class="mb-3">
      <%= f.input :description %>
    </div>
    <div class="mb-3">
      <%= f.file_field :picture, class: "form-control form-control-sm", accept: 'image/png, image/jpg, image/jpeg' %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-outline-info mb-3" %>
    </div>
  <% end %>
</div>